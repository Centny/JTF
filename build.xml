<?xml version="1.0" encoding="UTF-8"?>
<project name="JTF" basedir="." default="main">
    <property environment="env"/>
    <property name="lib.dir" value="lib"/>
    <property name="out.dir" value="out"/>
    <property name="classes.dir" value="${out.dir}/classes"/>
    <property name="src.dir" value="src"/>
    <property name="lib.jtf.ver" value="0.1.1"/>
    <property name="lib.eutil.ver" value="0.1.2"/>
    <property name="author" value="cny"/>
    <path id="app.classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>
    <target name="clear">
        <delete dir="${out.dir}"/>
        <mkdir dir="${out.dir}"/>
        <mkdir dir="${classes.dir}"/>
    </target>
    <!-- 编译 -->
    <target name="compile" depends="clear">
        <javac srcdir="${src.dir}" destdir="${classes.dir}" debug="true"
               deprecation="true" encoding="utf-8">
            <compilerarg value="-Xlint:unchecked"/>
            <classpath refid="app.classpath"/>
        </javac>
        <copy overwrite="true" todir="${classes.dir}">
            <fileset dir="${src.dir}">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <!-- 开始打包 -->
    <!-- 公共模块打包 -->
    <target name="eutil.jar" depends="compile">
        <mkdir dir="${out.dir}/eutil"/>
        <!--copy the file to the tmp dire -->
        <copy overwrite="true" todir="${out.dir}/eutil">
            <fileset dir="${classes.dir}">
                <include name="**/util/**/*"/>
                <exclude name="**/test/**/*"/>
                <exclude name="**/jtf/**/*"/>
            </fileset>
            <fileset dir="${src.dir}">
                <include name="**/util/**/*"/>
                <exclude name="**/test/**/*"/>
                <exclude name="**/jtf/**/*"/>
            </fileset>
        </copy>
        <jar destfile="${out.dir}/eutil-${author}-${lib.eutil.ver}.jar"
             basedir="${out.dir}/eutil">
        </jar>
    </target>

    <!-- ETF -->
    <target name="jtf.jar" depends="eutil.jar">
        <mkdir dir="${out.dir}/jtf"/>
        <!--copy the file to the tmp dire -->
        <copy overwrite="true" todir="${out.dir}/jtf">
            <fileset dir="${classes.dir}">
                <include name="**/jtf/**/*"/>
                <exclude name="**/test/**/*"/>
                <exclude name="**/util/**/*"/>
            </fileset>
            <fileset dir="${src.dir}">
                <include name="**/jtf/**/*"/>
                <exclude name="**/test/**/*"/>
                <exclude name="**/util/**/*"/>
            </fileset>
        </copy>
        <jar destfile="${out.dir}/jtf-${author}-${lib.jtf.ver}.jar"
             manifest="src/org/cny/jtf/MANIFEST.MF"
             basedir="${out.dir}/jtf">
        </jar>
        <mkdir dir="${out.dir}/jtf_p"/>
        <mkdir dir="${out.dir}/jtf_p/lib"/>
        <copy overwrite="true" todir="${out.dir}/jtf_p/lib">
            <fileset dir="${lib.dir}">
                <include name="poi*"/>
                <include name="dbunit*"/>
                <include name="ojdbc*"/>
                <include name="slf4j*"/>
                <include name="log4j*"/>
            </fileset>
        </copy>
        <copy overwrite="true" todir="${out.dir}/jtf_p">
            <fileset dir="${src.dir}/org/cny/jtf/help"/>
        </copy>
        <copy overwrite="true" todir="${out.dir}/jtf_p">
            <fileset dir="${out.dir}">
                <filename name="jtf-${lib.jtf.ver}.jar"/>
            </fileset>
        </copy>
        <jar destfile="${out.dir}/jtf-${author}-${lib.jtf.ver}.zip"
             basedir="${out.dir}/jtf_p">
        </jar>
    </target>

    <!-- 工程起点 -->
    <target name="main" depends="jtf.jar">
        <echo message="****************************************"/>
        <echo message="*** This is the end of project build ***"/>
        <echo message="****************************************"/>
    </target>
</project>